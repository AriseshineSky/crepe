<%- contentFor('pageSection') %>
    <div class="main">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="title">Login</h3>
                        </div>
                        <div class="card-body">
                            <form action="/users/change-password" method="post">
                                <div class="form-group">
                                    <label for="name">User Name</label>
                                    <input name="name" type="name" class="form-control" id="name"
                                        placeholder="User Name">
                                </div>
                                <div class="form-group">
                                    <label for="password">Old Password</label>
                                    <input name="oldPassword" type="password" class="form-control" id="old-password"
                                        placeholder="Old Password">
                                </div>
                                <div class="form-group">
                                    <label for="password">New Password</label>
                                    <input name="newPassword" type="password" class="form-control" id="new-password"
                                        placeholder="New Password">
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>